<section class="articles">
  <ul class="article-ul">
    <% data.forEach(post => { %>

    <li>
      <a href="/post/<%= post._id %>" class="text-decoration-none text-dark">
        <span><%= post.title %></span>
        <br />
        <span class="article-list__date"
          >Date: <%= post.createdAt.toDateString() %></span
        >
        <span class="article-list__date">ID: <%= post._id %></span>
      </a>
    </li>

    <% }) %>
  </ul>
  <% if (nextPage !== null) {%>
  <a href="/?page=<% nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>
